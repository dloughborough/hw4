<h1><%= @place.name %></h1>


<div class="col-sm-3">
        <a href="/posts/new/" class="btn btn-success">New Post</a>
      </div>

<div class = "row">
  <% for post in @place.posts %>
    <div class ="col-md-3 col-sm-6">
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
      </div>
<% end %>
</div>

<div class="col-sm-3">
        <a href="/places" class="btn btn-success">Back to All Places</a>
      </div>