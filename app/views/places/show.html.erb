<% if @current_user %>

<h1><%= @place.name %></h1>


<div class="col-sm-3">
        <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-success">New Post</a>
      </div>

<div class = "row">
  <% for post in @place.posts %>
    <div class ="col-md-3 col-sm-6">
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>

      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post.image %>" class="img-fluid">
      <% end %>
      
      <p><%= post.description %></p>
      </div>
<% end %>
</div>

<div class="col-sm-3">
        <a href="/places" class="btn btn-success">Back to All Places</a>
      </div>

<% else %>
<div class="col-sm-3">
        <a href="/sessions/new/" class="btn btn-success">Login</a>
      </div>

<% end %>